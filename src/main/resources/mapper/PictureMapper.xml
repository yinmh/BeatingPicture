    <select id="getAllPictureByUserInfoId" parameterType="int" resultType="org.game.beatingpicture.entity.Picture">
      select a.* from user_picture b
      inner join picture a on a.id = b.picture_id  where b.user_id = #{userInfoId}
      and b.status = 0
    </select>

    <select id="getAllPictureByStatus" parameterType="int" resultType="org.game.beatingpicture.entity.Picture">
      select a.* from user_picture b
      inner join picture a on a.id = b.picture_id  where b.user_id = #{userInfoId}
      and b.status = 1
    </select>

    <select id="findCount" parameterType="int" resultType="int">
     select count(*) from user_picture b
      inner join picture a on a.id = b.picture_id  where b.user_id = #{userInfoId}
      and b.status = 1
    </select>

    <update id="updatePictureStatus" parameterType="int">
      update user_picture set status = #{flag} where id = #{id}
    </update>

